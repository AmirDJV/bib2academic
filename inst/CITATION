## -*- R -*-
citHeader("To cite the R package 'bib2academic' in publications use:")

year <- sub("-.*", "", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry	= "Manual",
         title	= "bib2academic: Convert BibTex to Markdown for the Hugo Academic Theme",
         author = c(person("Peter", "Baumgartner"),
                    person("Lorenzo", "Bussetti")),
         year = year,
         url = "https://github.com/petzi53/bib2academic/",
         textVersion = paste(
             "Baumgartner, P.; Busseti, L.(",
             year, ").  bib2academic: Convert BibTex to Markdown for the Hugo Academic Theme. ",
             vers, ". https://github.com/petzi53/bib2academic.", sep = "")
         )